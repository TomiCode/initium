{{template "header"}}
<!-- Menubar -->

<div class="ui container">
  <h1>Initium</h1>
</div>

<div class="ui secondary general menu">
  <div class="ui container">
    <div class="item">
      <img src="logo2.png" />
    </div>
    {{if .Current}}
      <div class="ui pointing dropdown item">
        <i class="cube icon"></i>{{.Current.Header.Name}} {{if .Current.Options}}<i class="dropdown icon"></i>{{end}}
        <div class="menu">
          <a href="{{route .Current.Header.Route}}" class="item">Index</a>
          {{range .Current.Options}}
            <div class="divider"></div>
            {{if .Name}}
              <div class="header">{{.Name}}</div>
            {{end}}
            {{range .Collection}}
              <a href="{{route .Route}}" class="item">{{.Name}}</a>
            {{end}}
          {{end}}
        </div>
      </div>
    {{end}}

    {{if .Elements}}
      <div class="ui pointing dropdown item">
        Modules <i class="dropdown icon"></i>
        <div class="menu">
          <div class="header">Your modules</div>
          {{range .Elements}}
            <a href="{{route .Route}}" class="item">{{.Name}}</a>
          {{end}}
        </div>
      </div>
    {{end}}
    
    <div class="right menu">
      <a href="/auth" class="item">
        <img class="ui avatar image" src="test.png" />
        <span>Username</span>
        <i class="dropdown icon"></i>
      </a>
    </div>
  </div>
</div>
